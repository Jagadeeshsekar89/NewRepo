@model RolesViewModel

<!-- MAIN CONTENT -->
<div id="content">

    <!-- row -->
    <div class="row">

        <!-- col -->
        <div class="col-xs-12 col-sm-7 col-md-7 col-lg-4">
            <h1 class="page-title txt-color-blueDark">
                <!-- PAGE HEADER -->
                Role
            </h1>
        </div>
        <!-- end col -->
        <!-- right side of the page with the sparkline graphs -->
        <!-- col -->
        <div class="col-xs-12 col-sm-5 col-md-5 col-lg-8">

        </div>
        <!-- end col -->

    </div>
    <!-- end row -->
    <!--
      The ID "widget-grid" will start to initialize all widgets below
      You do not need to use widgets if you dont want to. Simply remove
      the <section></section> and you can use wells or panels instead
      -->
    <!-- widget grid -->
    <section id="widget-grid" class="">

        <!-- row -->
        <div class="row">

            <!-- NEW WIDGET START -->
            <article class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <div class="well">
                    <form action="@Url.Action("AddRoleUserMenu", "Misc" )" method="POST" class="form-horizontal" name="assignRoleForm" id="assignRoleForm">
                        <fieldset>
                            <legend>Assign Role</legend>
                            <div class="row">
                                <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
                                    <div class="form-group">
                                        <label class="col-md-4 control-label">Select Role</label>
                                        <div class="col-md-6">
                                            @Html.DropDownListFor(m => m.RoleCode, Model.RoleList, "--Select--", new { @class = "form-control" })
                                            @*<select class="form-control">
                                                    <option value="AK">Admin</option>
                                                    <option value="HI">Manager</option>
                                                    <option value="HI">Audit</option>
                                                </select>*@
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
                                    <div class="form-group">
                                        <label class="col-md-4 control-label">Select Users</label>
                                        <div class="col-md-6">
                                            <select multiple class="select2 col-md-6" id="roleUsers">
                                                @foreach (var item in Model.UserList)
                                                {
                                                    if (Model != null && !string.IsNullOrEmpty(Model.UserCode) &&
                                                    Model.UserCode.Split(',').Any(u => u.Contains(item.UserCode)))
                                                    {
                                                    <option selected="selected" value="@item.UserCode">@item.FirstName @item.LastName</option>
                                                    }
                                                    else {
                                                    <option value="@item.UserCode">@item.FirstName @item.LastName</option>
                                                    }
                                                }
                                            </select>
                                            @Html.HiddenFor(m => m.UserCode)
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <fieldset>
                                <legend></legend>
                                <div class="row">
                                    <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
                                        <div class="form-group">
                                            <label class="col-md-4 control-label">Select Menus</label>
                                            <div class="col-md-6">
                                                <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#selectMenusModal">
                                                    Click here to select
                                                </button>
                                                <textarea id="selectedMenusList" class="form-control" rows="4" placeholder="Selected menus will be displayed here" readonly></textarea>
                                                @Html.HiddenFor(m => m.MenuCode)
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </fieldset>

                            <fieldset>
                                <legend></legend>
                                <div class="row">
                                    <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
                                        <div class="form-group">
                                            <label class="col-md-4 control-label">Select Branches</label>
                                            <div class="col-md-6">
                                                <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#selectBranchesModal">
                                                    Click here to select
                                                </button>
                                                <textarea id="selectedBranchList" class="form-control" rows="4" placeholder="Selected Branches will be displayed here" readonly></textarea>
                                                @Html.HiddenFor(m => m.selectedBranchIds)
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </fieldset>
                        </fieldset>
                        <div class="form-actions">
                            <div class="row">
                                <div class="col-md-12">
                                    <button class="btn btn-primary" type="submit">
                                        <i class="fa fa-save"></i>
                                        Add
                                    </button>
                                </div>
                            </div>
                        </div>

                    </form>
                </div>
            </article>
            <!-- WIDGET END -->

        </div>

        <!-- end row -->
        <!-- row -->

        <div class="row">

            <!-- a blank row to get started -->
            <div class="col-sm-12">
                <!-- your contents here -->
            </div>

        </div>

        <!-- end row -->

    </section>
    <!-- end widget grid -->

</div>
<!-- END MAIN CONTENT -->

<div class="modal fade" id="selectMenusModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel">Choose Menus for this Role</h4>
            </div>
            <div class="modal-body">
                <div class="col-md-12 role-based-menu-selection nested-checkbox">
                    <div class="dd role-menu-selection" id="nestable3">
                        <ol class="dd-list">
                            @if (Model.MenuList != null && Model.MenuList.Any())
                            {
                                var parentMenus = Model.MenuList.Where(i => string.IsNullOrEmpty(i.ParentMenucode)).ToList();
                                foreach (var item in parentMenus)
                                {
                                <li class="dd-item dd3-item" data-id="16">
                                    <div class="dd-handle dd3-handle"></div>
                                    <div class="dd3-content">
                                        <label>
                                            <input type="checkbox" data-text="@item.MenuName" value="@item.MenuCode">
                                            @item.MenuName
                                        </label>
                                    </div>
                                    @{
                                        var childItems = Model.MenuList.Any(i => string.Compare(i.ParentMenucode, item.MenuCode) == 0) ? Model.MenuList.Where(i => string.Compare(i.ParentMenucode, item.MenuCode) == 0).ToList() : null;
                                        if (childItems != null && childItems.Any())
                                        {
                                        <ol class="dd-list">
                                            @foreach (var childItem in childItems)
                                            {
                                            <li class="dd-item dd3-item" data-id="16">
                                                <div class="dd-handle dd3-handle"></div>
                                                <div class="dd3-content">
                                                    <label>
                                                        <input type="checkbox" data-text="@childItem.MenuName" value="@childItem.MenuCode">
                                                        @childItem.MenuName
                                                    </label>
                                                </div>
                                            </li>
                                            }
                                        </ol>
                                        }
                                    }
                                </li>
                                }
                             }
                        </ol>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" onclick="saveMenusForRole()">Done</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="selectBranchesModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel">Choose Branch for this Role</h4>
            </div>
            <div class="modal-body">
                <div class="col-md-12 role-based-branch-selection nested-checkbox">
                    <div class="dd role-menu-selection" id="nestable3">
                        <ol class="dd-list">
                            <li class="dd-item dd3-item" data-id="16">
                                <div class="dd-handle dd3-handle"></div>
                                <div class="dd3-content">
                                    <label>
                                        <input type="checkbox" value="1" data-text="Branch-1">
                                        Branch-1
                                    </label>
                                </div>
                            </li>
                            <li class="dd-item dd3-item" data-id="16">
                                <div class="dd-handle dd3-handle"></div>
                                <div class="dd3-content">
                                    <label>
                                        <input type="checkbox" data-text="Branch-2" value="2">
                                        Branch-2
                                    </label>
                                </div>
                            </li>
                            <li class="dd-item dd3-item" data-id="16">
                                <div class="dd-handle dd3-handle"></div>
                                <div class="dd3-content">
                                    <label>
                                        <input type="checkbox" data-text="Branch-3" value="3">
                                        Branch-3
                                    </label>
                                </div>
                            </li>
                        </ol>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary" onclick="saveBranchesForRole()">Done</button>
                </div>
            </div>
        </div>
    </div>
</div>

@section pagespecific {
    <!-- PAGE RELATED PLUGIN(S)
        <script src="..."></script>-->
    <script src="~/Scripts/plugin/jquery-nestable/jquery.nestable.min.js"></script>

    <script src="~/Scripts/custom.js"></script>
}
